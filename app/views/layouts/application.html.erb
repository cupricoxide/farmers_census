<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
 "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <title>Serve your country food - <%= yield(:title) || "Greenhorns" %></title>
  <%= stylesheet_link_tag 'reset-fonts-grids' %>
	<%= stylesheet_link_tag 'styles' %>			
	<%= javascript_include_tag :defaults %>
	<%= yield(:head) %>
</head>
<body>
<div id="doc4" class="yui-t3">

  <div id="hd" class="header">
		<h1><%= link_to image_tag("/images/serve_your_country_food.png",
						:title => "Serve your country food", 
						:id =>"Serve_your_country_food", 
						:alt => "Serve your country food"), home_path %>  <%# TODO: add handdrawn banner from brooke %>
						<%= image_tag("/images/farm_tools.png") %> </h1>  
	  <%= image_tag("hr_gray_875x25.png") %>
	</div> <!-- hd end -->

  <div id="bd">
    <div class="yui-g navigation">
     	<%= link_to image_tag("/images/text/Home.png", :title => "Home", :alt => "Home", :mouseover => "/images/text/Home_mouseover.png"), home_path %> 
			<% Page.find(:all).each do |page| %>
				<%= image_tag("/images/text/pipe.png", :alt => "|") %>									
				<%= link_to image_tag(page.label, :title => page.name, :alt => page.name, :mouseover => mouseover_file(page.label)), static_path(page.permalink) %>
			<% end %>
    </div> <!-- yui-g navigation end -->

    <div class="yui-ge">

      <div class="yui-u first">
			  <p style="color: red"><%= flash[:error] %></p>
			  <p style="color: green"><%= flash[:notice] %></p>
	 			<%= yield %> 
			</div> <!-- yui-u first end -->
			
      <div class="yui-u"> 
				<div class ='sidebar'>
					<%= yield(:sidebar ) || render(:partial => "/layouts/default_sidebar_content") %> 
				</div> <!-- sidebar end -->
			</div> <!-- yui-u second -->
			
    </div>  <!-- yui-gc -->

	  <div id="ft"> 
			<div class="yui-g footer">
	    	footer blah blah .... 
			</div>
		</div> <!-- ft end -->
		
 	</div> <!-- bd end -->     

</div> <!-- doc2 end -->
</body>
</html>
