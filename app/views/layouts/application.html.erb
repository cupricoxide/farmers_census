      <%= image_tag("/images/text/pipe.png", :alt => "|") %>									     								 
			<%= link_to image_tag("/images/text/Sponsors.png", 
									:title => "Sponsors", 
									:alt => "Sponsors",
									:mouseover => "/images/text/Sponsors_mouseover.png"), static_path("sponsors") %>									
    </div> <!-- yui-g navigation end -->

    <div class="yui-ge">

      <div class="yui-u first">
