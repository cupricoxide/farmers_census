<% fields_for "survey[answer_attributes][]", answer do |answer_form| -%>
	<%= h answer.question.text %> 

  <%- if answer.question.qtype == "text_field" or answer.question.qtype == "text_area" -%>
    <br/><%= answer_form.send("#{answer.question.qtype}", :text, :id => "#{answer.question.text}", :rows => 3) %>
  <%- elsif answer.question.qtype == "list"  -%>
    <%- for option in answer.question.options -%>
			<br/> <%= check_box_tag "survey[answer_attributes][#{answer.id}][option_ids][]", option.id, answer.options.include?(option) %> <%= "#{option.text}" %> 
    <%- end -%>
  <%- elsif answer.question.qtype == "options" or answer.question.qtype == "yes_no" -%>
  	<%- for option in answer.question.options -%>
			<br/> <%= radio_button_tag "survey[answer_attributes][#{answer.id}][option_ids][]", option.id, answer.options.include?(option) %> <%= "#{option.text}" %> 
    <%- end -%>
	<%- end -%>
  <hr/>

<% end -%>
<br/> 