<div id="header">
	<%= render :partial => "header", :locals => {:stage => @stage} %>
</div>

<% form_for (@stage,:html => {:multipart => true}) do |f| -%>
	<div id='census_answers'> 
		<%= render :partial => "answer", :collection => @answers %>

	 	<%- if @stage.title.downcase == 'getting in touch' -%> 
	 	<%# TODO: figure out a way to do this: if stage.about?("getting in touch") %>
			<%# 'getting in touch' stage require the map %> 
	  	<%= render :partial => "address" %>
		<%- end -%>	

		<%- if @stage.title.downcase == 'contact details' -%>
			<div id="images">
				<% show_avatars do |image| %>
					<%= image_tag "#{image}" %>
				<% end %>
			</div>		
			<p><%= file_field :avatar, :uploaded_data %></p>
			<p>Upload images of yourself and your farm and put your face on the map!</p>
		<%- end -%>
	
		<%= render :partial => "footer", :locals => { 
				:current_stage => @stage, 
				:prev_stage => @prev_stage, 
				:next_stage => @next_stage } %>
	</div>  
<% end -%>
