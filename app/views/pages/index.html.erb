<%= link_to 'New page', new_page_path %> <br/><br/>  

<% for page in @pages %>
	Page Name: <%=h page.name %> <br/>
	Permalink: <%=h page.permalink %> <br/>
	Content: <%=h truncate(page.content, 100, "...") %> <br/>
  <%= link_to 'Show', page %> | 
	<%= link_to 'Edit', edit_page_path(page) %> | 
	<%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %> <hr/>
<% end %>